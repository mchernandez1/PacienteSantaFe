<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maria.pacientesantafe.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="citas"
        android:text="@string/citas"
        android:id="@+id/btnCitas"
        android:layout_below="@+id/btnConsejos"
        android:layout_alignLeft="@+id/btnConsejos"
        android:layout_alignStart="@+id/btnConsejos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="historial"
        android:text="@string/historial"
        android:id="@+id/btnHistorial"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnMedicos"
        android:layout_alignStart="@+id/btnMedicos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="consejos"
        android:text="@string/consejos"
        android:id="@+id/btnConsejos"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="medicos"
        android:text="@string/medicos"
        android:id="@+id/btnMedicos"
        android:layout_below="@+id/btnCitas"
        android:layout_alignLeft="@+id/btnCitas"
        android:layout_alignStart="@+id/btnCitas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="editarPerfil"
        android:text="@string/perfil"
        android:id="@+id/btnPerfil"
        android:layout_below="@+id/btnHistorial"
        android:layout_alignRight="@+id/btnCitas"
        android:layout_alignEnd="@+id/btnCitas"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="@string/logout"
        android:id="@+id/btnSesion"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignBottom="@+id/btnPerfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>